{{>layout/header}}
<h1> 게시글 수정</h1>
{{#posts}}
<div class="col-md-12">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label for="id"> 글 번호</label>
                <input type="text" class="form-control" id="id" value="{{id}}" readonly>
            </div>

            <div class="form-group">
                <label for="author"> 작성자</label>
                <input type="text" class="form-control" id="author" value="{{author}}" readonly>
            </div>

            <div class="form-group">
                <label for="title"> 제목</label>
                <input type="text" class="form-control" id="title" value="{{title}}">
            </div>

            <div class="form-group">
                <label for="content"> 내용</label>
                <input type="text" class="form-control" id="content" value="{{content}}">
            </div>
        </form>

        <button type="button" class="btn btn-primary" id="btn-update">수정</button>
        <a href="/" role="button" class="btn btn-secondary">취소</a>
    </div>
</div>
{{/posts}}
{{>layout/footer}}