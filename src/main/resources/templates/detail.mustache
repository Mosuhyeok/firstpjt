{{>layout/replyform}}

<br><br>
{{#reply}}
    <table border="2" width ="700" height="200" >
        <th>댓글 글쓴이</th>
        <th>댓글 내용</th>
        <th>작성 시간</th>
        <tr>
            <td>{{reply_name}}</td>
            <td>{{reply_content}}</td>
            <td>{{modifiedDate}}</td>
        </tr>
    </table>
    <button class="reply_delete" value="{{id}}">삭제하기</button>
    <button class="reply_updapte" value="{{id}}"수정하기></button>
